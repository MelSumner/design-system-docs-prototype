<h2>
  Components
</h2>
<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <ul class="space-y-3">
    {{#each @model.docs as |listitem|}}
      <li
        class="bg-white shadow overflow-hidden px-4 py-4 sm:px-6 sm:rounded-md"
      >
        <LinkTo
          @route="docs.doc"
          @model={{listitem.id}}
          class="underline"
        >
          {{listitem.title}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>
